datasource db {
  provider = "sqlite"
  url      =  "file:./dev.db"
}

model Testimonials {
  id        Int      @id @default(autoincrement())
  comment   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id Int

  user Users @relation(fields: [user_id], references: [id])
  @@map("testimonials")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  salt  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  testimonials Testimonials[]
  @@map("users")
}